                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toEndOf="@+id/line15"
                            app:layout_constraintTop_toBottomOf="@+id/complete_tx_visit_wat" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <View
