<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/room_info_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/product_info_left_img"
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/left_black_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/product_info_appbar_tx_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:text="객실상세"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/room_info_btn_cart"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/cart_black_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/link_black_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/room_info_btn_cart"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/room_info_nestedScroolView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_info_appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--방 이름-->
            <TextView
                android:id="@+id/room_info_tx_room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Standard"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/room_info_tx_room_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="노하드PC, 웨이브 waave"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_info_tx_room_type" />


            <TextView
                android:id="@+id/room_info_tx_personnel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="기준 인원 2명(최대 2명)"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_info_tx_room_option" />


            <ImageView
                android:id="@+id/room_info_img_build"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/build_img"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_info_tx_personnel" />

            <TextView
                android:id="@+id/room_info_tx_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="일산(중산) Box"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/room_info_img_build"
                app:layout_constraintTop_toBottomOf="@id/room_info_tx_personnel" />

            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:adjustViewBounds="true"
                android:src="@drawable/phone_blue_img"
                app:layout_constraintStart_toEndOf="@+id/room_info_tx_brand_name"
                app:layout_constraintTop_toBottomOf="@id/room_info_tx_personnel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:text="전화하기"
                android:textColor="@color/look_all_btn_text_color"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/phone_img"
                app:layout_constraintTop_toBottomOf="@id/room_info_tx_personnel" />


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/room_info_viewPager2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/room_info_tx_brand_name" />


            <!--체크인-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product_info_btn_check_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@+id/line1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_info_viewPager2">

                <TextView
                    android:id="@+id/product_info_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="체크인"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/product_info_tx_check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8월 22일(일)"
                    android:textColor="@color/look_all_btn_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/product_info_img_blue_down"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_info_checkin" />

                <ImageView
                    android:id="@+id/product_info_img_blue_down"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/down_blue_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/product_info_tx_check_in"
                    app:layout_constraintTop_toBottomOf="@+id/product_info_checkin" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--체크인과 체크아웃 가운데 사선-->
            <View
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#E6E5E5"
                android:rotation="20"
                app:layout_constraintEnd_toStartOf="@+id/product_info_btn_check_out"
                app:layout_constraintStart_toEndOf="@+id/product_info_btn_check_in"
                app:layout_constraintTop_toBottomOf="@+id/room_info_viewPager2" />


            <!--체크아웃-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product_info_btn_check_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/line1"
                app:layout_constraintTop_toBottomOf="@+id/room_info_viewPager2">

                <TextView
                    android:id="@+id/product_info_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="체크아웃"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/product_info_tx_check_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8월 23일(월)"
                    android:textColor="@color/look_all_btn_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/product_info_checkout_img_blue_down"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_info_checkout" />

                <ImageView
                    android:id="@+id/product_info_checkout_img_blue_down"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/down_blue_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/product_info_tx_check_out"
                    app:layout_constraintTop_toBottomOf="@+id/product_info_checkout" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--대실,숙박 버튼을 감싸는 테두리 있는 레이아웃-->
            <LinearLayout
                android:id="@+id/room_info_linear_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/room_info_rectangle_1dp_darkgray_bg"
                android:orientation="vertical"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/product_info_btn_check_out">


                <!--대실 버튼 레이아웃-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/room_info_btn_halfDay"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/button_clicked_bg"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/half"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="대실"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/useTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="이용시간"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/half" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="최대 4시간"
                        android:textColor="@color/blackForText"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/useTime"
                        app:layout_constraintTop_toBottomOf="@+id/half" />

                    <TextView
                        android:id="@+id/openTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="운영시간"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/useTime" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="~ 22:30"
                        android:textColor="@color/blackForText"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/openTime"
                        app:layout_constraintTop_toBottomOf="@+id/useTime" />

                    <TextView
                        android:id="@+id/item_product_info_rc_tx_site_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="판매가"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toTopOf="@+id/room_info_tx_half_day_price"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <TextView
                        android:id="@+id/room_info_tx_half_day_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        android:text="30,000원"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/line22"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <View
                        android:id="@+id/line22"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#DFDFDF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--숙박 버튼 레이아웃-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/room_info_btn_oneDay"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/button_clicked_bg"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="숙박"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/checkIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="체크인"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/one" />

                    <TextView
                        android:id="@+id/room_info_check_in_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="19:00 부터"
                        android:textColor="@color/blackForText"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/checkIn"
                        app:layout_constraintTop_toBottomOf="@+id/one" />

                    <TextView
                        android:id="@+id/checkOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="체크아웃"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkIn" />


                    <TextView
                        android:id="@+id/room_info_check_out_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="~ 13:00 까지"
                        android:textColor="@color/blackForText"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/checkOut"
                        app:layout_constraintTop_toBottomOf="@+id/checkIn" />

                    <TextView
                        android:id="@+id/room_info_tx_site_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="판매가"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toTopOf="@+id/room_info_tx_one_day_price"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <TextView
                        android:id="@+id/room_info_tx_one_day_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30,000원"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <!--예약공지-->
            <TextView
                android:id="@+id/room_info_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="예약공지"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_info_linear_btn" />

            <!--공지1 내용-->
            <LinearLayout
                android:id="@+id/room_notice_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_info_notice">

                <!--middledot-->
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/middledot_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="바로예약 특성 상 환불 및 취소가 불가합니다."
                    android:textColor="#636363"
                    android:textSize="14sp" />
            </LinearLayout>


            <!--공지2 내용-->
            <LinearLayout
                android:id="@+id/room_notice_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_notice_1">

                <!--middledot-->
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/middledot_img" />

                <TextView
                    android:id="@+id/product_info_way_to_find_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="객실요금은 2인 입실 기준이며, 파티룸 등 특수객실의 경우, 직접 입실 인원 확인이 필요합니다."
                    android:textColor="#636363"
                    android:textSize="14sp" />
            </LinearLayout>


            <!--공지3 내용-->
            <LinearLayout
                android:id="@+id/room_notice_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_notice_2">

                <!--middledot-->
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/middledot_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미성년자의 입실 가능여부는 직접 제휴점에 확인 후 예약 진행하시기 바랍니다."
                    android:textColor="#636363"
                    android:textSize="14sp" />
            </LinearLayout>


            <!--공지4 내용-->
            <LinearLayout
                android:id="@+id/room_notice_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_notice_3">

                <!--middledot-->
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/middledot_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미성년자의 혼숙예약으로 인해 발생하는 입실 거부에 대해서는 취소/환불이 불가합니다."
                    android:textColor="#636363"
                    android:textSize="14sp" />
            </LinearLayout>


            <!--공지5 내용-->
            <LinearLayout
                android:id="@+id/room_notice_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/room_notice_4">

                <!--middledot-->
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/middledot_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제휴점 사정에 의한 취소 발생 시 100% 환불 처리됩니다."
                    android:textColor="#636363"
                    android:textSize="14sp" />
            </LinearLayout>


