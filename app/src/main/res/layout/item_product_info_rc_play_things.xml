<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="190dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_product_info_rc_play_things_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_product_info_rc_play_things_img"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/play_things_img1"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_product_info_rc_play_things_tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[전국] 챔피언 키즈카페\n9개점"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/item_product_info_rc_play_things_card_view"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_product_info_rc_play_things_tx_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_product_info_rc_play_things_tx_price"
        android:layout_marginEnd="4dp"
        android:text="10%"
        android:textColor="@color/redBtnColor"
        android:textSize="14sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/item_product_info_rc_play_things_tx_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_product_info_rc_play_things_tx_won"
        android:layout_marginEnd="2dp"
        android:text="5,400원"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/dotumpro3" />

    <TextView
        android:id="@+id/item_product_info_rc_play_things_tx_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>