<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RisingTestYanolja" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowNoTitle">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>


    <!--spaly화면 status 투명하게 변경하기 위한 테마 추가-->
    <style name="SplashActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!--login Activity의 editText handler를 위한 style테마 추가한다-->
    <style name="LoginActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/look_all_btn_text_color</item>
        <item name="colorControlActivated">@color/look_all_btn_text_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowNoTitle">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_top_round_border</item>
    </style>


    <style name="HintTextAppearance">
        <item name="android:fontFamily">@font/dotumpro2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">11sp</item>
    </style>


    <!--bottomNavigationView Inactive Text Size-->
    <style name="navTextInactive">
        <item name="android:textSize">11.5sp</item>
    </style>
    <!--bottomNavigationView Active Text Size-->
    <style name="navTextActive">
        <item name="android:textSize">11.5sp</item>
    </style>

    <!--tabLayout tab Text Size-->
    <style name="tab_text">
        <item name="android:textSize">12.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--tabLayout tab bar color-->
    <style name="MainHomeTabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/tabLayoutTab
        </item>                                <!--인디케이터 배경 -->
    </style>

    <!--tabLayout custom to chip tab Text Size-->
    <style name="chip_tab_text">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/dotumpro2</item>
    </style>


    <!--tabLayout custom to chip tab Text Size-->
    <style name="chip_tab_station_text">
        <item name="android:textSize">10sp</item>
    </style>



    <!--login activity tabLayout text Size-->
    <style name="login_activity_tabLayout_text">
        <item name="android:textSize">12.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--my_near_fragment tabLayout text Size-->
    <style name="my_near_fragment_tabLayout_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>







</resources>