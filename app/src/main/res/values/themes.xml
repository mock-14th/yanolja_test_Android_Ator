<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RisingTestYanolja" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowNoTitle">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!--bottomNavigationView Inactive Text Size-->
    <style name="navTextInactive">
        <item name="android:textSize">11.5sp</item>
    </style>
    <!--bottomNavigationView Active Text Size-->
    <style name="navTextActive">
        <item name="android:textSize">11.5sp</item>
    </style>

    <!--tabLayout tab Text Size-->
    <style name="tab_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--tabLayout tab bar color-->
    <style name="MainHomeTabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/tabLayoutTab</item>                                <!--인디케이터 배경 -->
    </style>
</resources>